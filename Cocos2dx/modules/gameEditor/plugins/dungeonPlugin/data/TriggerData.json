{
  "name": "dg.TriggerData",
  "desc": "触发器",
  "members": {
    "itemId": {
      "desc": "子对象id计数器",
      "type": "int",
      "init": 1
    },
    "name": {
      "desc": "触发器名称",
      "type": "string",
      "init": "新触发器"
    },
    "nameTip": {
      "desc": "名称追加信息",
      "type": "string",
      "bind": "  ({executeTime}/{count}) {status==1?'(首次)':(status==2?'(二次)':'')}",
      "save": false
    },
    "count": {
      "desc": "执行次数",
      "type": "int",
      "init": 1
    },
    "open": {
      "desc": "状态",
      "type": "bool",
      "init": true,
      "enumList": [
        {
          "label": "开启",
          "type": true
        },
        {
          "label": "关闭",
          "type": false
        }
      ]
    },
    "status": {
      "desc": "是否首次有效",
      "type": "int",
      "init": 0,
      "enumList": [
        {
          "label": "一直有效",
          "type": 0
        },
        {
          "label": "首次有效",
          "type": 1
        },
        {
          "label": "第二次有效",
          "type": 2
        }
      ]
    },
    "startCondition": {
      "desc": "启动条件类型",
      "type": "int",
      "init": 1,
      "enumList": [
        {
          "label": "进入副本",
          "type": 1
        },
        {
          "label": "移动触发",
          "type": 2
        },
        {
          "label": "hp触发",
          "type": 3
        },
        {
          "label": "通关触发",
          "type": 4
        },
        {
          "label": "触发器触发",
          "type": 5
        },
        {
          "label": "全队灭亡",
          "type": 6
        },
        {
          "label": "指定怪物死亡",
          "type": 7
        }
      ]
    },
    "delay": {
      "desc": "延时(ms)",
      "type": "int"
    },
    "startValue": {
      "desc": "启动条件",
      "type": "*",
      "saveClass": true
    },
    "effects": {
      "desc": "触发效果列表",
      "type": "Array",
      "typeValue": "dg.TriggerEffectData"
    },
    "openFlag": {
      "desc": "是否开启",
      "type": "bool"
    },
    "hasPlay": {
      "desc": "是否触发过",
      "type": "bool",
      "save": false
    },
    "hasStop": {
      "desc": "是否已经停止",
      "type": "bool",
      "save": false
    },
    "color": {
      "desc": "文字颜色",
      "type": "number",
      "bind": "{hasStop?0x990000:(hasPlay?0x999999:0)}",
      "save": false
    },
    "executeTime": {
      "desc": "执行次数",
      "type": "int",
      "save": false
    }
  }
}